{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
   
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "LogCorner.EduSync.Notification.Server"
    }
  },
  "endpoint": "http://localhost:5000",
  "allowedOrigins": "http://localhost:4200,http://localhost:4201",
  "isAuthenticationEnabled": false,
  "AzureAdB2C": {
    "Instance": "https://workshopb2clogcorner.b2clogin.com",
    "ClientId": "[ClientId]",
    "Domain": "workshopb2clogcorner.onmicrosoft.com",
    "TenantId": "[TenantId]",
    "SignUpSignInPolicyId": "B2C_1_SignUpIn"
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com",
    "ClientId": "[ClientId]",
    "Domain": "workshopb2clogcorner.onmicrosoft.com",
    "TenantId": "[TenantId]"
  },
  "OpenTelemetry": {
    "ServiceName": "LogCorner.EduSync.Notification.Server.Dev",
    "SourceName": "notification-server",
    "Otlp": {
      "ServiceName": "LogCorner.EduSync.Notification.Server.Dev",
      "Endpoint": "http://localhost:4317"
    },
    "Jaeger": {
      "Hostname": "localhost",
      "PortNumber": 6831
    },
    "Zipkin": {
      "Hostname": "localhost",
      "PortNumber": 9412
    },
    "NewRelic": {
      "Hostname": "https://otlp.nr-data.net",
      "PortNumber": 4317,
      "LicenceKey": "[NewRelicApiKey]"
    }
  }
}